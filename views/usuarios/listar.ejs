<script src="/js/usuarios/listar.js"></script>
<h1>Usuários</h1>
<a href="/usuario/cadastro" 
class="btn btn-primary">Cadastrar usuário</a>
<br><br>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Ativo</th>
            <th>Perfil</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i<usuarios.length; i++) { %>
            <tr>
                <td><%= usuarios[i].id %></td>
                <td><%= usuarios[i].nome %></td>
                <td><%= usuarios[i].email %></td>
                <td><%= usuarios[i].ativo %></td>
                <td><%= usuarios[i].perfilId %></td>
                <td>
                    <button type="button" data-id="<%=usuarios[i].id%>" data-nome="<%=usuarios[i].nome%>" class="btn btn-danger btn-exclusao">
                        <i class="fas fa-trash"></i>
                    </button>
                    <a class="btn btn-warning btn-alterar" href="/usuario/alterar/<%=usuarios[i].id%>"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

